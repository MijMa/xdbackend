generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique

  @@map("user")
}

model Event {
  id              String    @id @default(uuid())
  name            String
  owner           String
  description     String?
  place           String?
  minParticipants Int?
  maxParticipants Int?
  price           Decimal?  @db.Decimal(10, 2)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  metaData        Json?
  startDate       DateTime
  endDate         DateTime
  signupStarts    DateTime?
  signupEnds      DateTime?
  forms           Form[]

  @@map("events")
}

model Form {
  id           String        @id @default(uuid())
  fields       Json
  eventId      String
  event        Event         @relation(fields: [eventId], references: [id])
  participants Participant[]

  @@map("forms")
}

model Participant {
  id        String @id @default(uuid())
  name      String
  answers   Json
  formId    String
  userEmail String
  form      Form   @relation(fields: [formId], references: [id])

  @@map("participants")
}
