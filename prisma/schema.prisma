// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
	id Int @id @default(autoincrement())
	name String
	email String @unique
}

//Prisma naming convention is singular names with uppercase
//There's no such strong convention for database table names, so plural lovercase
model Event {
	id String @id @default(uuid())
	name String
	owner String
	description String?
	place String?
	startDate DateTime
	endDate DateTime
	minParticipants Int?
	maxParticipants Int?
	signupStarts DateTime?
	signupEnds DateTime?
	price Int?
	metaData Json?
	createdAt DateTime @default(now())
	updatedAt DateTime @updatedAt
	forms Form[]

	@@map("events") // maps model to 'events' table in DB
}

model Form {
	id String @id @default(uuid())
	fields Json
	eventId String
	event Event @relation(fields: [eventId], references: [id])
	participants Participant[]

	@@map("forms") // maps model to 'forms' table in DB
}

model Participant {
	id String @id @default(uuid())
	name String
	userEmail String @unique
	answers Json
	formId String
	form Form @relation(fields: [formId], references: [id])

	@@map("participants") // maps model to 'participants' table in DB
}